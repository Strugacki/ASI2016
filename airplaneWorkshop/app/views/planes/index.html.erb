<p id="notice"><%= notice %></p>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <h1>Planes</h1>
    </div>  
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 text-center">
        <a class="btn btn-primary btn-sm" href="/planes/new">New plane</a>
    </div>  
</div>
<div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Brand</th>
          <th>Model</th>
          <th>Fault</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @planes.each do |plane| %>
          <tr>
            <td><%= plane.brand %></td>
            <td><%= plane.model %></td>
            <td><%= plane.fault %></td>
            <td><%= link_to 'Show', plane %></td>
            <td><%= link_to 'Edit', edit_plane_path(plane) %></td>
            <td><%= link_to 'Destroy', plane, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<br>

