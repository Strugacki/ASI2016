<%= form_for @user , :html => {:class => "form-horizontal center"} do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

     <div class="row">
         <div class="form-group">
             <%= f.label :first_name, "First name:", class: "col-lg-2 col-md-2 col-sm-1 control-label" %>
            <div class="col-lg-8 col-md-8 col-sm-10">
              <%= f.text_field :first_name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
              <%= f.label :email, "Email:", class: "col-lg-2 col-md-2 col-sm-1 control-label" %>
            <div class="col-lg-8 col-md-8 col-sm-10">
              <%= f.text_field :email, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
              <%= f.label :password, "Password:", class: "col-lg-2 col-md-2 col-sm-1 control-label" %>
            <div class="col-lg-8 col-md-8 col-sm-10">
              <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
              <%= f.label :password_confirmation, "Password confirmation:", class: "col-lg-2 col-md-2 col-sm-1 control-label" %>
            <div class="col-lg-8 col-md-8 col-sm-10">
              <%= f.password_field :password_confirmation, class: "form-control" %>
            </div>
          </div>
          <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 text-center">
                    <%= f.submit "Submit", class: "btn btn-default btn-primary" %>
                </div>  
            </div>
    </div>
<% end %>
